{
  "name": "telemshipper",
  "description": "Telegram Shipping Bot with MongoDB Atlas",
  "stack": "container",
  "buildpacks": [],
  "env": {
    "MONGO_URL": {
      "description": "MongoDB Atlas connection string",
      "required": true
    },
    "DB_NAME": {
      "description": "MongoDB database name",
      "value": "telegram_shipping_bot"
    },
    "TELEGRAM_BOT_TOKEN": {
      "description": "Telegram Bot Token",
      "required": true
    },
    "BOT_MODE": {
      "description": "Bot mode: polling or webhook",
      "value": "polling"
    }
  },
  "addons": [],
  "scripts": {
    "mongodb:migrate": "./migrate.py"
  }
}
